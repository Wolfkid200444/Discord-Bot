{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],

    "outDir": "dist/",

    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "typings/index.d.ts"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}